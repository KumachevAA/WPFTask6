<Window x:Class="WPFTask6._4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTask6._4"
        mc:Ignorable="d"
        Title="Задание 6.4" Height="450" Width="300"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ScrollViewer >
            <TreeView VerticalContentAlignment="Top" HorizontalContentAlignment="Left" Name="Explorer" TreeViewItem.Expanded="Explorer_Expanded" UIElement.PreviewMouseUp="Explorer_PreviewMouseUp" />
        </ScrollViewer>

        <ScrollViewer Grid.Row="1">
            <TextBlock Name="dataBox" TextAlignment="Left" FontSize="14"/>
        </ScrollViewer>
    </Grid>
</Window>
