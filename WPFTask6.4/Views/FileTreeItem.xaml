<UserControl x:Class="WPFTask6._4.Views.FileTreeItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTask6._4.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Label VerticalAlignment="Top" Content="{Binding ItemName}"/>
        <TreeView ItemsSource="{Binding FileSystemEntry.Children}" VerticalAlignment="Top" >
            <TreeView.ItemTemplate>
                <DataTemplate>
                    <local:FileTreeItem Children="{Binding Children}" ItemName="{Binding Name}"/>
                </DataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </StackPanel>
</UserControl>
